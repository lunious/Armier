<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/d16"
    android:orientation="vertical">


    <TextView
        android:id="@+id/bored_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/mainTheme"
        android:textSize="@dimen/d16" />

    <TextView
        android:id="@+id/bored_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d8"
        android:textColor="@color/gray"
        android:textSize="@dimen/d14" />

    <TextView
        android:id="@+id/bored_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d8"
        android:textColor="@color/mainText"
        android:textSize="@dimen/s16" />

    <ImageView
        android:id="@+id/bored_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d250"
        android:layout_marginTop="@dimen/d10"
        android:scaleType="centerCrop" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1"
        android:layout_marginTop="@dimen/d32"
        android:background="@color/lightGrey" />

</LinearLayout>