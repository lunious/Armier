<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="IndexFragmentBind">

        <variable
            name="hint"
            type="String" />
        <variable
            name="onClick"
            type="com.lunioussky.armier.main.mui.index.fragment.IndexFragment.OnClick" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_bar_height"
            android:background="@color/mainTheme" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d50"
            android:layout_gravity="center"
            android:background="@color/mainTheme"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/d32"
                android:layout_height="@dimen/d32"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/d10"
                android:onClick="@{onClick::onClickToUser}"
                android:src="@mipmap/default_portrait"/>

            <LinearLayout
                android:id="@+id/ll_search"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d32"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/d10"
                android:layout_marginRight="@dimen/d10"
                android:background="@drawable/bg_search">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/d14"
                        android:layout_height="@dimen/d14"
                        android:layout_gravity="center"
                        android:src="@mipmap/img_search" />

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:maxLines="1"
                        android:paddingStart="@dimen/d2"
                        android:text="输入关键字搜索"
                        android:textColor="#9d9d9d"
                        android:textSize="@dimen/s14" />
                </LinearLayout>


            </LinearLayout>



        </LinearLayout>

    </LinearLayout>
</layout>
