<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/no_network_view"
android:layout_width="match_parent"
android:layout_height="match_parent">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/d40"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/no_network_retry_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_network_error" />

    <TextView
        android:id="@+id/no_network_view_tv"
        style="@style/MultipleStatusView.Content"
        android:text="网络异常，请检查网络设置"
        android:textSize="@dimen/d15"
        android:paddingTop="@dimen/d10"
        android:textColor="#6c6c6c" />
</LinearLayout>

</LinearLayout>